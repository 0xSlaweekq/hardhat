{
  // tips alt settings
  "[dockerfile]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[js]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[solidity]": {
    "editor.defaultFormatter": "NomicFoundation.hardhat-solidity",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true,
    "editor.minimap.maxColumn": 140,
    "editor.rulers": [
      {
        "color": "#1e751633",
        "column": 73
      },
      {
        "color": "#c2790b99",
        "column": 82
      }
    ],
    "editor.tabCompletion": "on",
    "editor.tabSize": 2,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true
  },
  "[ts]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[yml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "chat.editor.fontFamily": "JetBrains Mono",
  "debug.onTaskErrors": "abort",
  "diffEditor.ignoreTrimWhitespace": false,
  // editor settings
  "editor.acceptSuggestionOnEnter": "off", // tab or enter choose
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.codeLensFontFamily": "JetBrains Mono",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.foldingImportsByDefault": true,
  "editor.foldingMaximumRegions": 65000,
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontVariations": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": false,
  "editor.guides.bracketPairs": "active", // color helpers for bracket pairss
  "editor.inlayHints.fontFamily": "JetBrains Mono",
  "editor.inlineSuggest.enabled": true,
  "editor.largeFileOptimizations": false,
  "editor.lineNumbers": "interval",
  "editor.minimap.enabled": false,
  "editor.minimap.maxColumn": 140,
  "editor.mouseWheelZoom": true,
  "editor.renderWhitespace": "none",
  "editor.scrollBeyondLastColumn": 0,
  "editor.suggest.preview": true,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  "editor.unicodeHighlight.ambiguousCharacters": false, // useful for russian symbols
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 140,
  // explorer settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // work on files
  "files.autoSave": "onFocusChange",
  "files.defaultLanguage": "markdown",
  // git settings
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  // helper tips js
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "literals",
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "markdown.extension.print.theme": "dark",
  "nginx-conf-hint.format.align": true,
  "notebook.formatOnSave.enabled": true,
  "notebook.output.fontFamily": "JetBrains Mono",
  //prettier settings
  "prettier.arrowParens": "avoid",
  "prettier.bracketSameLine": false,
  "prettier.bracketSpacing": true,
  "prettier.embeddedLanguageFormatting": "auto",
  "prettier.endOfLine": "auto",
  "prettier.jsxSingleQuote": true,
  "prettier.printWidth": 140,
  "prettier.proseWrap": "always",
  "prettier.quoteProps": "as-needed",
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "none",
  "prettier.useTabs": false,
  "projectManager.any.ignoredFolders": [
    "node_modules",
    "out",
    "typings",
    "build",
    "build",
    ".env",
    ".git"
  ],
  "projectManager.git.ignoredFolders": [
    "node_modules",
    "out",
    "typings",
    "build",
    "build",
    ".git",
    ".env"
  ],
  "redhat.telemetry.enabled": true,
  "scm.inputFontFamily": "JetBrains Mono",
  // Solidity settings
  "solidity.compileUsingRemoteVersion": "v0.8.22",
  "solidity.compilerOptimization": 200,
  "solidity.defaultCompiler": "remote",
  // Enables as you type compilation of the document and error highlighting
  "solidity.enabledAsYouTypeCompilationErrorCheck": true,
  // Enables / disables the solidity formatter prettier (default) or forge (note it needs to be installed)
  "solidity.formatter": "prettier",
  "solidity.linter": "solhint",
  "solidity.packageDefaultDependenciesDirectory": "node_modules",
  "solidity.solhintRules": {
    "avoid-call-value": "warn",
    "avoid-low-level-calls": "warn",
    "avoid-sha3": "warn",
    "avoid-suicide": "warn",
    "avoid-throw": "warn",
    "avoid-tx-origin": "warn",
    "check-send-result": "warn",
    "code-complexity": ["off", 7],
    "compiler-version": ["off"],
    "const-name-snakecase": "warn",
    "constructor-syntax": "warn",
    "contract-name-camelcase": "warn",
    "custom-errors": "warn",
    "event-name-camelcase": "warn",
    "explicit-types": ["off", "explicit"],
    "foundry-test-functions": ["off", ["setUp"]],
    "func-name-mixedcase": "warn",
    "func-named-parameters": ["off", 6],
    "func-param-name-mixedcase": "warn",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "function-max-lines": ["warn", 50],
    "immutable-vars-naming": [
      "warn",
      {
        "immutablesAsConstants": true
      }
    ],
    "imports-on-top": "warn",
    "max-line-length": ["error", 140],
    "max-states-count": ["warn", 15],
    "modifier-name-mixedcase": "warn",
    "named-parameters-mapping": "warn",
    "no-complex-fallback": "warn",
    "no-console": "off",
    "no-empty-blocks": "off",
    "no-global-import": "off",
    "no-inline-assembly": "off",
    "no-unused-import": "warn",
    "no-unused-vars": "warn",
    "not-rely-on-block-hash": "warn",
    "not-rely-on-time": "off",
    "one-contract-per-file": "warn",
    "ordering": "warn",
    "payable-fallback": "warn",
    "prettier/prettier": "warn",
    "private-vars-leading-underscore": [
      "warn",
      {
        "strict": false
      }
    ],
    "quotes": "off",
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ],
    "reentrancy": "warn",
    "state-visibility": "warn",
    "use-forbidden-name": "warn",
    "var-name-mixedcase": "warn",
    "visibility-modifier-order": "warn"
  },
  "solidity.telemetry": true,
  "solidity.validationDelay": 500,
  "tabnine.experimentalAutoImports": true,
  // terminal settings
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.windows": "shell",
  "terminal.integrated.enableMultiLinePasteWarning": "auto",
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.tabs.location": "left",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.confirmSaveUntitledWorkspace": false,
  "window.zoomLevel": 0.25,
  // workbench settings
  "workbench.colorCustomizations": {
    "tab.activeBackground": "#89ff892d"
  },
  "workbench.editor.limit.value": 5,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none"
}
